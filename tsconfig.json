{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "/*": ["./*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
